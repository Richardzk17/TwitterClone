<%- include('../partials/html-head') %>

    <body>
        <div class="container2">
            <div class="content3">
                <p> <img class="logo" src="image/owl.png" alt="" width="38" height="38"></p>
                <p style="font-weight: bold;" class="sidebar"><img class="logo1" src="image/Home.png" alt="/tweets"><a href="/tweets"> Home</a></p>
                <p class="sidebar"><img class="logo1" src="image/magnifying-glass (1).png" alt=""> Explore</p>
                <p class="sidebar"><img class="logo1" src="image/user.png" alt=""> Profile</p>
                <%- include('../partials/nav') %>
            </div>
            <div class="content4">
                <section>
                    <% if (user) { %>
                      <form action="/tweets" method="POST">
                        <label>
                          <input type="text" class="comment" name="name" autocomplete="off" placeholder="What is happening?!">
                        </label>
                        <button class="postBtn" type="submit">Post</button>
                      </form>
                    <% } %>
                    <ul>
                      <% tweets.forEach(tweet => { %>
                        <li>
                          <p><img  src="image/user (1).png" alt=""><%= tweet.createdAt.toLocaleString() %></p><a href="/tweets/<%= tweet._id %>"><%= tweet.name %></a> 
                        </li>
                      <% }) %>
                    </ul>
                  </section>
                </div>
            <div class="content5"></div>

    </body>



