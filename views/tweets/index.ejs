<%- include('../partials/html-head') %>

    <body>
        <div class="container2">
            <div class="content3">
                <p> <img class="logo" src="image/owl.png" alt="" width="42" height="42" ></p>
                <%- include('../partials/nav') %>
            </div>
            <div class="content4">
                    <form action="/tweets" method="POST">
                      <label>
                        <input type="text" name="name" class="comment" placeholder="What is happening?!" autocomplete="off">
                      </label>
                      <label>
                        <button type="submit" class="postBtn">Post</button>
                        <ul>
                          <% tweets.forEach(tweet => { %>
                            <li>
                              <%= tweet.name %>
                            </li>
                          <% }) %>
                        </ul>
            </div>
        <div class="content5">

        <h2>Comments</h2>
        <% if (user) { %>
          <h3>Add a comment</h3>
          <form action="/tweets/<%= tweets._id %>/comments" method="POST">
            <textarea name="content"></textarea><br>
            <button type="submit">Add Comment</button>
          </form>
        <% } %>
        <ul>
            <% tweets.comments?.forEach(comment => { %>
              <li>
                <%= comment.content %> - <%= comment.author.name %>
                <% if (comment.author.equals(user?.profile)) { %>
                  <form 
                    action="/tweets/<%= tweet._id %>/comments/<%= comment._id %>?_method=DELETE" 
                    method="POST"
                    class="inline"
                  >
                    <button class="btn" type="submit">Delete Comment</button>
                  </form>
                  <a href="/tweets/<%= tweet._id %>/comments/<%= comment._id %>/edit">
                    <button class="btn">Edit Comment</button>
                  </a>
                <% } %> 
              </li> 
            <% }) %>
          </ul>
        </div>
    </body>

