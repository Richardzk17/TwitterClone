<%- include('../partials/html-head') %>
<section>
    <h2>Comments</h2>
    <% if (user) { %>
      <h3>Add a comment</h3>
      <form action="/tweets/<%= tweet._id %>/comments" method="POST">
        <textarea name="content"></textarea><br>
        <button type="submit">Add Comment</button>
      </form>
    <% } %>
    <ul>
        <% tweet.comments?.forEach(comment => { %>
          <li>
            <%= comment.content %> - <%= comment.author.name %>
          </li> 
        <% }) %>
      </ul>
      <form 
      action="/tweets/<%= tweet._id %>/comments/<%= comment._id %>?_method=PUT"
      method="POST"
    >
      <label>
        Content: 
        <textarea
          cols="30"
          rows="5" 
          type="text"
          name="content" 
          autocomplete="off"
        ><%= comment.content %></textarea>
      </label>
      <button type="submit">Update Comment</button>
    </form>
</section>