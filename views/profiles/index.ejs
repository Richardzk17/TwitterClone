<%- include('../partials/html-head') %>
<link rel="stylesheet" href="/stylesheets/profiles/index.css">


<%- include('../partials/html-head') %>

    <body>
        <div class="container2">
            <div class="content3">
                <p> <img class="logo" src="/image/owl.png" alt="" width="38" height="38"></p>
                <a href="/tweets"><p style="font-weight: bold;" class="sidebar"><img class="logo1" src="/image/Home.png" alt="/tweets"> Home</a></p>
                <a href="/profiles"><p class="sidebar"><img class="logo1" src="/image/magnifying-glass (1).png" alt=""> Explore</a></p>
                <p class="sidebar"><img class="logo1" src="/image/user.png" alt="/profiles/"> Profile</p>
                <%- include('../partials/nav') %>
            </div>
            <div class="content4">
                <main>
                    <div class="card-container">
                      <% profiles.forEach(profile => { %>
                        <a class="text-decoration-none" href="/profiles/<%= profile._id %>">
                          <div class="card">
                            <img 
                              src="<%= profile.avatar %>" 
                              alt="<%= profile.name %>'s avatar"
                            >
                            <div class="card-body">
                              <h1 class="card-title"><%= profile.name %></h1>
                            </div>
                          </div>
                        </a>
                      <% }) %>
                    </div>
                  </main>


                </div>
            <div class="content5"></div>

    </body>





